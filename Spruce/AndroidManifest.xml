<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spruce"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"> </uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"> </uses-permission>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.spruce.Spruce"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="com.example.spruce.Profile"
            android:label="@string/Profile" >
        </activity>
        
        <activity
            android:name="com.example.spruce.My_Store"
            android:label="@string/My_Store" >
        </activity>
        
        <activity
            android:name="com.example.spruce.Product_Information"
            android:label="@string/Product_Information" >
        </activity>
        
        <activity
            android:name="com.example.spruce.Settings"
            android:label="@string/Settings" >
        </activity>
        
        <activity
            android:name="com.example.spruce.Register"
            android:label="@string/Register" >
        </activity>
        
        <activity
            android:name="com.example.spruce.Product_Screen"
            android:label="@string/Spruce" >
        </activity>
        
        <activity 
            android:name="com.example.spruce.Create_Account"
            android:label="@string/Create_Account" >
        </activity>
        
        <activity
            android:name="com.example.spruce.No_More_Products"
            android:label="@string/No_More_Products" >
        </activity>
        
    </application>

</manifest>
